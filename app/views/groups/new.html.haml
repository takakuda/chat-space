= form_for @group do |f|
  .chat-group-form
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :name , 'グループ名'
      .chat-group-form__field--right
        = f.text_field :name, class: 'chat_group_name', placeholder: 'グループ名を入力してください'
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :users, 'チャットメンバー'
      .chat-group-form__field--right
        = collection_check_boxes( :@group, :user_ids, User.all, :id, :name)
        .chat-group-form__field.clearfix
          .chat-group-form__field--left
          .chat-group-form__field--right
          = f.submit class: 'chat-group-form__action-btn', type: 'submit', value: 'Save'
