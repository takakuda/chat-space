= render 'chat_main-name'

.chat-main
  .chat-main__group
    %p.group__name
      = @group.name
    %p.group__member
      Members:
      = @group.users.pluck :name
    = link_to edit_group_path(@group) do
      %p.group__btn
        Edit
  .chat-main__contents
    - @messages[0,6] .each do |message|
      .chat-main__contents-user
        = message.user.name
      .chat-main__contents-time
        = message.created_at
      .chat-main__contents-messages
        = message.body
    / = render partial: 'chat', collection: @messages, as: :message
    / .chat-main__contents-user takakuda kei
    / .chat-main__contents-time 2017/05/01 18:03:47
    / .chat-main__contents-messages なるほど

  .chat-main__input
    .chat-main__input__send
      = form_for [@group, @message], html: { class: "form js-form" } do |f|
        %p
          = f.text_field :body, class: "submit__content js-form__text-field", placeholder: 'メッセージを入力してください'
          %i.fa.fa-file-image-o.fa-lg{"aria-hidden": "true"}
        %p
          = f.submit "Send", class: "submit__btn", name: "Commit"
