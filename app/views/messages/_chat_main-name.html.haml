.chat-space
  .chat-space__name
    .chat-space__name-contents
      = current_user.name
    = link_to new_group_path do
      .i.fa.fa-pencil-square-o.fa-lg{"aria-hidden": "true"}
    = link_to edit_user_registration_path do
      .i.fa.fa-cog.fa-lg{"aria-hidden": "true"}
  .chat-space__message
    = render partial: 'messages/chat-main__group', collection: @groups, as: :group
